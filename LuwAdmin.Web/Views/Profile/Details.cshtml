@model LuwAdmin.Web.Models.ProfileViewModels.ProfileDetailsViewModel

@{
    ViewData["Title"] = "Member Details";
}
<section class="content-header">
    <h1>
        Profile
        <small>Details</small>
    </h1>
    <p>
        <div class="row" style="padding-left: 20px;">
            <a asp-action="changepassword" asp-controller="manage" class="btn btn-warning"><i class="fa fa-lock"></i> Change Password</a>
        </div>
    </p>
    <h0>@Model.FirstName @Model.LastName</h0>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Profile Details</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="padding-left: 20px">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="col-md-2">
                            <i class="fa fa-user-circle text-light-blue" style="font-size: 32pt;"></i>
                        </div>
                        <div class="col-md-10">
                            <div>
                                @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.Street1)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.Street2)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.ZipCode)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                            <div>
                                <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Membership Details</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="padding-left: 20px">
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Expires</label>
                            <div class="col-md-10">
                                @if (Model.WhenExpires < DateTime.Now)
                                {
                                    @Html.DisplayFor(model => model.WhenExpires)
                                }
                                else if (Model.WhenExpires >= DateTime.Now && Model.WhenExpires <= DateTime.Now.AddMonths(1))
                                {
                                    <span class="label label-warning">@Html.DisplayFor(modelItem => Model.WhenExpires)</span>
                                }
                                else if (Model.WhenExpires >= DateTime.Now)
                                {
                                    @Html.DisplayFor(modelItem => Model.WhenExpires)
                                }
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Since</label>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.WhenJoined)
                            </div>
                        </div>
                        
                </div>
            </div>
        </div>
    </div>    
    
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Member Chapters</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="padding-left: 20px">
                    <div>
                        <table id="chapterTable" class="table table-hover table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Chapter")
                                    </th>
                                    <th>
                                        @Html.DisplayName("When Joined")
                                    </th>
                                    <th>
                                        @Html.DisplayName("When Left")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Chapters)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Chapter.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WhenJoined)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.WhenLeft)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            
        });
    </script>
}
