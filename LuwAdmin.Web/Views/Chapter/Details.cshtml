@model LuwAdmin.Web.Models.ChapterViewModels.ChapterDetailsViewModel

@{
    ViewData["Title"] = "Chapter Details";
}

<section class="content-header">
    <h1>
        Chapters
        <small>Details</small>
    </h1>
    <p style="margin-top:10px;">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fa fa-times"></i> Delete</a>
    </p>
    <h0>@Html.DisplayFor(model => model.Name)</h0>
</section>


<section class="content">

    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@ViewData["MemberCount"]</h3>
                    <p>Members</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person"></i>
                </div>
                <a href="#" class="small-box-footer">
                    @*More info <i class="fa fa-arrow-circle-right"></i>*@
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@ViewData["Last30Days"]</h3>
                    <p>New members past 30 days</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person"></i>
                </div>
                <a href="#" class="small-box-footer">
                    @*More info <i class="fa fa-arrow-circle-right"></i>*@
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Chapter Details</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div style="padding-left: 20px">
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Chapter Name</label>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Secondary Name</label>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.SubName)
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Description</label>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Phone</label>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Email</label>
                            <div class="col-md-10">
                                <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Web</label>
                            <div class="col-md-10">
                                <a href="@Model.Url">@Html.DisplayFor(model => model.Url)</a>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Facebook</label>
                            <div class="col-md-10">
                                <a href="@Model.Url">@Html.DisplayFor(model => model.Facebook)</a>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-2 control-label label-right">Twitter</label>
                            <div class="col-md-10">
                                <a href="@Model.Url">@Html.DisplayFor(model => model.Twitter)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Chapter Meetings</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div style="padding-left: 20px">
                        <div>
                            <a asp-action="AddMeeting" asp-route-id="@Model.Id" class="btn btn-success"><i class="fa fa-map-marker"></i> Add Meeting</a>
                            <br /><br />
                        </div>
                        <table id="meetingTable" class="table table-responsive table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>Meeting Type</th>
                                    <th>Location</th>
                                    <th>Schedule</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in Model.Meetings)
                                { 
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(item => row.MeetingType) <br />
                                            <i>@Html.DisplayFor(item => row.Description)</i>
                                        </td>
                                        <td>
                                            <div class="col-sm-2">
                                                <span class="fa fa-map-marker text-primary" style="font-size:40px;"></span>
                                            </div>
                                            <div class="col-sm-10">
                                                @Html.DisplayFor(item => row.Venue) <br />
                                                @Html.DisplayFor(item => row.Street1) <br />
                                                @Html.DisplayFor(item => row.Street2)
                                                @Html.DisplayFor(item => row.City), @Html.DisplayFor(item => row.State)  @Html.DisplayFor(item => row.Zip)
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(item => row.MeetingInfo)
                                        </td>
                                        <td><a asp-action="EditMeeting" asp-route-id="@row.Id">Edit</a> | <a asp-action="DeleteMeeting" asp-route-id="@row.Id">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Chapter Notes</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div style="padding-left: 20px">
                        <div>
                            @Html.DisplayFor(model => model.Notes)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Chapter Members</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div style="padding-left: 20px">
                        <table id="memberTable" class="table table-responsive table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Member Since</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in Model.Members)
            {
                                    <tr>
                                        <td>@Html.DisplayFor(item => row.Name)</td>
                                        <td>@Html.DisplayFor(item => row.WhenJoined)</td>
                                        <td><a href="mailto:@row.Email">@Html.DisplayFor(item => row.Email)</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            setActiveMenu("#menuChapters");
            $('#memberTable').DataTable();
            //$('#meetingTable').DataTable();
        });
    </script>
}

