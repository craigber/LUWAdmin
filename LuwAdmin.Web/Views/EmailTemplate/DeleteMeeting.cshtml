@model LuwAdmin.Web.Models.ChapterViewModels.ChapterDeleteMeetingViewModel

@{
    ViewData["Title"] = "Delete";
}

<section class="content-header">
    <h1>
        Chapters
        <small>Delete Meeting</small>
    </h1>
    <h0>@Html.DisplayFor(model => model.ChapterName)</h0>
    <div class="box">
        <div class="box-body">
            @Html.DisplayFor(model => model.MeetingType) <br />
            <i>@Html.DisplayFor(model => model.Description)</i>
            <br /><br />
            @Html.DisplayFor(model => model.Venue) <br />
            @Html.DisplayFor(model => model.Street1) <br />
            @Html.DisplayFor(model => model.Street2)
            @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State)  @Html.DisplayFor(model => model.Zip)
            <br /><br />
            @Html.DisplayFor(model => model.MeetingInfo)
            <br /><br />
            <label>Are you sure you want to delete this meeting?</label>
        </div>
    </div>    
</section>

<section class="content">
    <div>
        <form asp-action="DeleteMeeting">
            <div class="form-actions no-color">
                <input asp-for="Id" hidden /> 
                <button type="submit" class="btn btn-danger"><i class="fa fa-close"></i> Delete</button>
                <a asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            setActiveMenu("#menuChapters");
        });
    </script>
}


