@model LuwAdmin.Web.Models.ChapterViewModels.ChapterDeleteMeetingViewModel

@{
    ViewData["Title"] = "Delete";
}

<section class="content-header">
    <h1>
        Chapters
        <small>Delete Meeting</small>
    </h1>
    <h0>@Html.DisplayFor(model => model.ChapterName)</h0>
    <div>
        @Model.MeetingType<br />
        <i>@Model.Description</i><br/><br/>
        @Model.Venue<br />
        @Model.Street1<br />
        @if (!string.IsNullOrEmpty(Model.Street2))
        {
            @Model.Street2<br/>
        }
        @Model.City @Model.State @Model.Zip<br /><br />
        @Model.MeetingInfo
    </div>
</section>

<section class="content">
    <div>
        <label>Are you sure you want to delete this meeting?</label>
        <form asp-action="DeleteMeeting">
            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger"><i class="fa fa-times"></i> Delete</button>
                <a asp-action="Details/@Model.Id" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            setActiveMenu("#menuChapters");
        });
    </script>
}


