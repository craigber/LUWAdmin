@model LuwAdmin.Web.Models.MemberViewModels.MemberLeaveChapterViewModel

@{
    ViewData["Title"] = "Leave Chapter";
}

<section class="content-header">
    <h1>
        Member
        <small>Leave Chapter</small>
    </h1>
    <h0>@ViewBag.CommonName</h0>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Member</h3>
                </div>
                <div class="box-body">
                    <div>
                        <label>Are you sure you want to remove this member from @Model.ChapterName chapter?</label>
                    </div>
                </div>
            </div>
            <form asp-action="LeaveChapter">
                <input asp-for="MemberChapterId" hidden />

                <div class="form-actions no-color">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-arrow-right"></i> Leave</button>
                    <a asp-action="Index" class="btn btn-default">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            setActiveMenu("#menuChapters");
        });
    </script>
}


