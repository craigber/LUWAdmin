@model LuwAdmin.Web.Models.Chapter

@{
    ViewData["Title"] = "Delete";
}

<section class="content-header">
    <h1>
        Chapters
        <small>Delete</small>
    </h1>
    <h0>@Html.DisplayFor(model => model.Name)</h0>
</section>

<section class="content">
    <div>
        <label>Are you sure you want to delete this chapter?</label>
        <form asp-action="Delete">
            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger"><i class="fa fa-times"></i> Delete</button>
                <a asp-action="Details/@Model.Id" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            setActiveMenu("#menuChapters");
        });
    </script>
}


